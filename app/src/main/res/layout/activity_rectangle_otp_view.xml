<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RectangleOtpViewActivity">


    <com.easyotpview.easyotpview.EasyOtpView
        android:id="@+id/otpView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:inputType="number"
        android:text="124323"
        app:cursorColor="@android:color/holo_red_dark"
        android:textColor="@android:color/black"
        app:filledLineColor="@color/black"
        android:textSize="18sp"
        app:lineColor="@android:color/holo_red_dark"
        app:hideLineWhenFilled="false"
        app:itemCount="6"
        app:viewType="rectangle"
        app:state_filled="true"
        />


    <com.easyotpview.easyotpview.EasyOtpView
        android:id="@+id/customOtpView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:inputType="number"
        android:text="124323"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:itemBackgroundUnfilled="@drawable/gray_rectangle_corners"
        app:itemBackgroundFilled="@drawable/green_rectangle_corners"
        app:hideLineWhenFilled="false"
        app:itemCount="6"
        app:viewType="custom"
        app:state_filled="true"
        />

</LinearLayout>